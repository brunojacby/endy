<header>
    <div class="container-nav">
        <a href="/" class="image-logo">{{> logo }}</a>
        {{> searchbar}}
        <div class="buttons-header">
            <a class="btn" href="/login"><span class="material-symbols-outlined">person</span></a>
            <a class="btn" href="/carrinho"><span class="material-symbols-outlined">shopping_bag</span></a>
            <button type="button" class="btn toggleButton"><span class="material-symbols-outlined">menu</span></button>
        </div>
    </div>
    <div class="expand-nav" id="menu">
        <div class="inner-nav">
            <div class="inner-nav-btn">
                <img src="https://cdn2.iconfinder.com/data/icons/media-controls-5/100/close-512.png"
                    alt="Close button menu" class="toggleButton" width="50px" height="50px" />
            </div>
            <div class="inner-nav-categories">
                <div>
                    <h3>CATEGORIAS</h3>
                    <ul>
                        <li>NOVIDADES</li>
                        <li>NOVIDADES</li>
                        <li>NOVIDADES</li>
                    </ul>
                </div>
                <div>
                    <h3>CARRINHO</h3>
                    <ul>
                        <li>CADASTRO</li>
                        <li>ENTRAR</li>
                        <li>AJUDA</li>
                        <li>CONTATO</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<link rel="stylesheet" href="/css/header.css">

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleButtons = document.querySelectorAll('.toggleButton');
        const element = document.getElementById('menu');

        toggleButtons.forEach(function (botao) {
            botao.addEventListener('click', function () {
                if (element.style.display === 'block') {
                    element.style.display = 'none';
                } else {
                    element.style.display = 'block';
                }
            });
        });
    })
</script>